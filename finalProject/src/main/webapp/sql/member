//테이블 생성 순서
members, category -> product, store, boards -> review, purchase, wish, comments -> complain

//테이블 생성
CREATE TABLE members(
	mem_id varchar2(50) PRIMARY KEY,
	mem_pwd char(60),
	mem_name varchar2(50) NOT NULL,
	mem_email varchar2(70) UNIQUE NOT NULL,
	mem_add1 varchar2(100) NOT NULL,
    mem_add2 varchar2(100) NOT NULL,
	mem_postcode number,
	mem_recentAdd1 varchar2(100),
    mem_recentAdd2 varchar2(100),
	mem_recentPostcode number,
	mem_tel varchar2(20) NOT NULL,
	mem_location varchar2(50),
	mem_recentLocation varchar2(50),
	mem_logtime DATE DEFAULT SYSDATE NOT NULL,
	enabled number DEFAULT 1 NOT NULL, -- 계정 사용 가능 여부 / 시큐리티
	authority varchar2(50) NOT NULL -- 권한 부여할 role 이름 / 시큐리티 
);

alter table members add mem_kakao number;


alter table members add mem_agree varchar(20);--'on'/null

alter table members add mem_complain number;
