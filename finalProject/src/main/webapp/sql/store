// 테이블 생성입니다!!!!!!!!!!!!!!!!
CREATE TABLE STORE(
STORE_NICKNAME VARCHAR2(50) PRIMARY KEY,
STORE_IMG VARCHAR2(200),
STORE_INTRO VARCHAR2(4000),
STORE_ECHO NUMBER DEFAULT 0, -- MAX 10
STORE_SCOREAVG NUMBER DEFAULT 0, -- MAX 5
);

// FK 추가
ALTER TABLE store
ADD FOREIGN KEY (MEM_ID) REFERENCES MEMBERS(MEM_ID);


// 테스트용 데이터 삽입 
INSERT INTO store(STORE_NICKNAME, STORE_IMG, STORE_INTRO, STORE_ECHO, STORE_SCOREAVG) 
